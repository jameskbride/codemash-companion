<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jameskbride.codemashcompanion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.CodemashCompanionApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash.SplashActivity"
            android:noHistory="true"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".speakers.detail.SpeakerDetailActivity"
            android:label="@string/speaker_detail"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".sessions.detail.SessionDetailActivity"
            android:label="@string/session_detail"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".about.AboutActivity"
            android:label="@string/action_about"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".rooms.RoomActivity"
            android:label="@string/map"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>